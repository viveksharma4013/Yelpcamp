<%- include("../partials/header") %>
<div class="container">
<header class="jumbotron">
	<div class="container">
		<h1>Welcome to Yelp Camp!!</h1>
		<p>Here are some of our handpicked campgrounds</p>
		<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
	</div>
</header>
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
<%campgrounds.forEach(function(camps){%>
	<div class="col-md-3 col-sm-6">
		<div class="img-thumbnail">
			<img width="250px" height="160px" src="<%=camps.image%>">
		<div class="caption">
			<h4><%=camps.name%></h4>
		</div>
		<a href="/campgrounds/<%=camps._id%>" class="btn btn-primary">More Info</a>			
		</div>
	</div>
<%})%>
</div>
<a href="/">Landing Page</a>
</div>
<%- include("../partials/footer") %>
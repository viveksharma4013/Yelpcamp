<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="img-thumbnail">
				<img class="img-responsive" src="<%=foundCampground.image%>">
				<div class="caption-full">
					<h4 class="float-right">$9.00/night</h4>
					<a><h4><%=foundCampground.name%></h4></a>
					<p><%=foundCampground.description%></p>
				</div>
			</div>
			<div class="card card-body bg-light">
				<div class="text-right">
					<a class="btn btn-success" href="<%=foundCampground._id%>/comments/new">Add Comment</a>
				</div>
				<hr>
				<% foundCampground.comments.forEach(function(comment){%>
				<div class="row">
					<div class="col-md-12">
						<strong><%=comment.author%></strong>
						<span>10 days ago</span>
						<p><%=comment.text%></p>
					</div>
				</div>
				<%})%>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>